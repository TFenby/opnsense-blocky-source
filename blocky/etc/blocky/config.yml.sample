# Blocky DNS Configuration
# Edit this file to configure Blocky. See https://0xerr0r.github.io/blocky/latest/configuration/
# After editing, restart the service: configctl blocky restart

upstreams:
  groups:
    default:
      - 1.1.1.1
      - 8.8.8.8

# Blocky acts as a primary DNS server (like AdGuard Home). Disable Unbound if using Blocky as your DNS resolver.
ports:
  dns: 5353
  http: 4000

blocking:
  denylists:
    ads:
      - https://raw.githubusercontent.com/StevenBlack/hosts/master/hosts
  clientGroupsBlock:
    default:
      - ads

log:
  level: info
